    if (isset($form[$mlid]['#item'])) {
      xmlsitemap_switch_user(0);
      $menu_item = menu_link_load($form[$mlid]['#item']['mlid']);
      xmlsitemap_restore_user();
      xmlsitemap_menu_item_update($menu_item);
    }
  }
}

